{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,


    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "#components/*": ["app/components/*"],
      "#ducks/*": ["app/ducks/*"],
      "#styles/*": ["app/styles/*"],
      "#models/*": ["app/models/*"],
      "#assets/*": ["assets/*"],
      "@mock/*": ["__mocks__/*"]
    },

    "rootDir": "src/ext",
    "outDir": "public",

    "typeRoots": [
      "./node_modules/@types",
      "./project_types"
    ],
  },
  "include": [
    "src/ext/**/*"
  ],
  "exclude":[
    "__tests__",
    "__mocks__",

  ],
}
